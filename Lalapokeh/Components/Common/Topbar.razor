@inject AppThemeService ThemeService

<MudAppBar Fixed="false" Style=@($"background-color: {ThemeService.CustomColors["Primary"]};")>
    <MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="w-full h-full">
        <MudItem sm="4" Class="h-full">
            <MudImage src="images/pokemon_logo.png" alt="Logo" Class="h-full" style="max-width: auto" />
        </MudItem>
        <MudItem sm="4">
            <MudStack Row Justify="Justify.Center">
                <MudInput T="string" Placeholder="Search..." Class="w-full" Style="background-color: #ffffff; padding: 3px 10px; border-radius: 3px;"/>
            </MudStack>
        </MudItem>
        <MudItem sm="4">
            <MudStack Row Justify="Justify.FlexEnd">
                <MudAvatar Style=@($"background-color: {ThemeService.CustomColors["Secondary"]};")>HN</MudAvatar>
            </MudStack>
        </MudItem>
    </MudStack>
</MudAppBar>
