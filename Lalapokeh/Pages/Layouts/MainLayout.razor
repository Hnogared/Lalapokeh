@inherits LayoutComponentBase
@using Lalapokeh.Components.Common
@inject AppThemeService ThemeService

<MudThemeProvider Theme="@ThemeService.DefaultTheme" />
<MudPopoverProvider />

<MudLayout Style="height: 99vh; width: 100vw">
    <Topbar />

    <MudDrawerContainer>
      <MudDrawer @bind-Open="@_open" Variant="DrawerVariant.Persistent" Elevation="0" Style="border-right: 1px solid">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation</MudText>
        </MudDrawerHeader>

        <Navbar />
      </MudDrawer>
        
      <MudMainContent>
          @Body
      </MudMainContent>
    </MudDrawerContainer>
</MudLayout>

@code {
    private bool _open = true;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}